      <div>
<h2 style="color: white;">Estas son las reviews:</h2>
<br><br>

<% if (typeof Review== 'undefined') { %> 
  <% for( let i = 0; i < Review.length; i++ ) { %>
  <%= Review[i].reviewText %> 
  <% } %>
<% } %>

  <!-- tirar un for que muestre todas las reviews-->
  <ul id="myUL">
    <% for(let i = 0; i < Review.length; i++){ %>
      <li>
       <a href='' class ="uk-text-secondary">
         
           <p><%= // Nombre del que hizo la review %> </p>
           <p><%= Review[i].reviewText %> </p>
           <p>Rating: <%= Review[i].score %> </p>

                



           <form action="/movies/edit/<%=Review[i].id %>" method="POST">
            <div class="form-group">
              <label for="score"></label><br>
              <input id="movie_id" name="movie_id" type='hidden' value=<%= idpelicula %>  class="form-control">
          </div>
            <button type="submit" style="margin-top: 10px;" class="uk-button uk-button-primary">
                Edit review
            </button>
        </form>
        <form  action="/movies/delete/<%=Review[i].id %> " method="POST">
          <div class="form-group">
            <label for="score"></label><br>
            <input id="movie_id" name="movie_id" type='hidden' value=<%= idpelicula %>  class="form-control">
        </div>
          <button type="submit"  style="margin-top: 10px;" class="uk-button uk-button-danger">

              Delete movie
          </button>
      </form>
        </a>
