                    <div class="form-group">
                        <label for="score">Rating (out of 10):</label><br>
                        <input class="custom-select" style="width: 200px;" id="score" name="score" value="">
                        
                    </div>
                    <div class="form-group">
                      <label for="score"></label><br>
                      <input id="movie_id" name="movie_id" type='hidden' value=<%= idpelicula %>  class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="createdAt">Created at:</label><br>
                    <input type="date" id="createdAt" name='createdAt'  value="" class="form-control">
                </div>
