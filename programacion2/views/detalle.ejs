  <% } %>
<% } %>

  <!-- tirar un for que muestre todas las reviews-->
  <ul id="myUL">
    <% for(let i = 0; i < 5; i++){ %>
      <li>
       <a href='' class ="uk-text-secondary">
           <p><%= //nombre del usuario haciendo la review %> </p>
           <p><%= //reviewText %> </p>
        </a>
      </li>
    <% } %>     
  </ul>


